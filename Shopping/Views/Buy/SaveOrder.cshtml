@model Shopping.ViewModel.BuyVM
@{
    ViewData["Title"] = "SavrOrder";
}

<div class="container p-3">
    <form asp-controller="Buy" asp-action="SaveOrder"  method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">
                   
                    
                        <span>Submit Order</span>
                    
                    
                        
                    
                </h2>
            </div>
            <div asp-validation-summary="All"></div>
            <input type="number" hidden asp-for="CartId" value="@ViewBag.CartId" />
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">CustomerName</label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="text-center">
                @* @if (Model== null || Model.Id == 0)
                {
                    <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                } *@
                <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
                <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </div>
        
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
