@model Shopping.ViewModel.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" align="Center">Category List</h2>
        </div>
    </div>

    <table id="customers"  class="table table-hover table-bordered table-striped">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

            <tr>
                <td colspan="3">
                    <div class="col-10 text-end">
                        <a asp-controller="Category" asp-action="CreateUpdate" class="btn btn-primary">
                            Create Category
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
