@model Shopping.Models.CartItemModel

@{
    ViewData["Title"] = "Delete Product";
}

<style>
    /* Container styles */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Card styles */
    .card {
        border: 1px solid #ccc;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        padding: 20px;
    }

    /* Header styles */
    .card-header h1 {
        color: #dc3545; /* Red color for the header text */
        font-size: 24px;
    }

    /* Confirmation message styles */
    .confirmation-message {
        margin-bottom: 20px;
        font-size: 18px;
    }

    /* Button styles */
    .btn-danger {
        background-color: #dc3545; /* Red background for the Delete button */
        color: #fff; /* White text color */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Slightly darker red on hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray background for the Cancel button */
        color: #fff; /* White text color */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Slightly darker gray on hover */
        }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>Remove Product</h1>
        </div>
        <div class="card-body">
            <div class="confirmation-message">
                <p>Are you sure you want to delete this product?</p>
            </div>

            <form asp-action="CartRemove" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <span> | </span>
                    <a asp-action="CartIndex" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
