@model Shopping.ViewModel.ProductVM
@{
    ViewData["Title"] = "CreateUpdate";
}

<div class="container mt-5">
    <form  asp-action="ProductCreateUpdate" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Product.Id" />
        <input type="hidden" asp-for="Product.ImageUrl"/>
        
       @*  <img id="selectedImage" src="#" alt="Selected Image" class="img-thumbnail" width="100" height="100" style="max-width: 100%; max-height: 200px;" /> *@
        <div class="border p-4 rounded shadow-lg">
            <div class="row">
                <!-- Left Column: Image Preview -->
                @* <div class="col-md-4">
                    <div class="text-center mb-4">
                        <img id="selectedImage" src="#" alt="Selected Image" class="img-thumbnail" style="max-width: 100%; max-height: 200px;" />
                    </div>
                </div> *@

                <!-- Right Column: Form Fields -->
                <div class="col-md-8">
                    <h2 class="text-primary mb-4" align="Center">
                        @if (Model.Product == null || Model.Product.Id == 0)
                        {
                            <span>Create Product</span>
                        }
                        else
                        {
                            <span>Update Product</span>
                        }
                    </h2>
                    <img src="@Model.Product.ImageUrl" width="300" height="100" />

                    <div asp-validation-summary="All"></div>

                    <div class="mb-3">
                        <label asp-for="Product.Name" class="form-label">Product Name</label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Product.Description" class="form-label">Description</label>
                        <input asp-for="Product.Description" class="form-control" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Product.Price" class="form-label">Price</label>
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Category" class="form-label">Category</label>
                        <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-select">
                            <option value="">--Select a category--</option>
                        </select>
                    </div>

                    <div width="200"  class="mb-3">
                        <label asp-for="Product.ImageUrl" class="form-label">Upload Product Image</label>
                        <input name="file" type="file" class="form-select"/>
                    </div>

                    <div width="" class="text-center">
                        @if ((Model.Product == null || Model.Product.Id == 0))
                        {
                            <button type="submit" class="btn btn-primary btn-lg">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary btn-lg">Update</button>
                        }

                        <a asp-controller="Product" asp-action="ProductIndex" class="btn btn-secondary btn-lg ml-2">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

