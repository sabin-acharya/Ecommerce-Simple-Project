@model Shopping.ViewModel.ProductVM

@{
    ViewData["Title"] = "Index";
}
<div class="cointainer p-3">
    <div class="row pt-4" align="center">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

    </div>


    <table class="table table-hover table-bordered table-striped" id="customers" style="width:100%">
        <style>
            table {
                border-collapse: collapse;
            }

            th, td {
                border: 1px solid lightpink;
                padding: 10px; /* Increase padding for better spacing */
            }
        </style>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Products)
            {
                @if (item != null)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.CategoryId</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Product" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                
            }
            <tr>
                <td colspan="3">
                    <div class="col-10 text-end" align="center">
                        <a asp-controller="Product" asp-action="CreateUpdate" class="btn btn-primary">
                            Add Products
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>


    @*class="w-75 btn-group" *@

</div>