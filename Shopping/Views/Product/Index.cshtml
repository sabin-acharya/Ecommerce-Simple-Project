@model Shopping.ViewModel.ProductVM

@{
    ViewData["Title"] = "Index";
}
<div class="cointainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> List</h2>
        </div>

    </div>


    <table class="table table-hover table-bordered table-striped " style="width:100%">
        <style>
            table {
                border-collapse: collapse;
            }

            th, td {
                border: 1px solid lightpink;
                padding: 1px;
            }
        </style>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.CategoryId</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Product" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>


            }
            <div style="position: relative;" class="col-10 text-end">
                <a asp-controller="Product" asp-action="CreateUpdate" class="btn btn-primary" style="position: absolute; bottom: 0;width: 150px; height: 40px;">
                    Create List
                    <i class="bi bi-plus-circle"></i>
                </a>
            </div>

        </tbody>

    </table>
    @*class="w-75 btn-group" *@

</div>