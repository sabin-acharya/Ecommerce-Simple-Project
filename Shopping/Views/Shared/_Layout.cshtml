<!-- Header Section -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>

    <!-- Include Bootstrap CSS from a CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css">
    <!-- Include custom CSS files -->
     <link rel="stylesheet" href="~/css/Minty.css" /> 
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Temp.css" asp-append-version="true" />

    <!-- Include jQuery, Popper.js, and Bootstrap JavaScript from CDNs -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

    <header>
    <nav style=" background-color: #FFB3B3; " class="navbar navbar-expand-lg " data-bs-theme="dark">
        <div class="container-fluid">
               
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="HomeIndex"><img height="50" width="50" src="https://dmnwebapi.dishhome.com.np/v1/file/image-16607301825045493.png" alt="RedStore" width="125px" </a> 
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
               </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeIndex">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="CartIndex" >CartItems</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUS">AboutUS</a>
                        </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Add Products</a>
                        <div class="dropdown-menu">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="ProductIndex">Product</a>
                            <a class="nav-link text-white" asp-area="" asp-controller="Category" asp-action="CategoryIndex">Category</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                    
                    </ul>
                    <div>
                    <partial name="_LoginPartial" />
                    </div>
                
                </div>
            
         </div>
       
       </nav>
   </header>
            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
    @await RenderSectionAsync("Scripts", required: false)

<div class="footer" style="background-color: #333; color: #fff;">
    <div class="container">
        <div class="row">
            <div class="col-md-3 footer-col-1">
                <h3 style="color: white;">Download Our App</h3>
                <p style="color: white;">Download the app for Android and iOS mobile phones.</p>
                <div class="app-logo">
                    <a href="https://play.google.com/store/apps/details?id=com.shirantech.dishhome&pli=1" target="_blank" rel="noopener noreferrer">
                        <img src="https://i.ibb.co/KbPTYYQ/play-store.png" alt="Link to Play Store" />
                    </a>
                    <a href="https://apps.apple.com/np/app/dish-home-nepal/id1396471022" target="_blank" rel="noopener noreferrer">
                        <img src="https://i.ibb.co/hVM4X2p/app-store.png" alt="Link to App Store" />
                    </a>
                </div>
            </div>
            <div class="col-md-3 footer-col-2">
                <h3>Follow Us</h3>
                <ul class="social-icons">
                    <li>
                        <a href="#" target="_blank" rel="noopener noreferrer">
                            <ion-icon name="logo-facebook"></ion-icon>
                        </a>
                    </li>
                    <li>
                        <a href="#" target="_blank" rel="noopener noreferrer">
                            <ion-icon name="logo-twitter"></ion-icon>
                        </a>
                    </li>
                    <li>
                        <a href="#" target="_blank" rel="noopener noreferrer">
                            <ion-icon name="logo-instagram"></ion-icon>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-3 footer-col-3">
                <h3 style="color: white;>Useful Links</h3>
                <ul>
                    <li style ="color: white;"><a href="#">Coupons</a></li >
                    <li style="color: white;><a href="#">Blog Post</a></li>
                    <li style="color: white;><a href="#">Return Policy</a></li>
                </ul>
            </div>
            <div class="col-md-3 footer-col-4">
                <h3>Contact Us</h3>
                <ul>
                    <li><a href="https://www.dishhome.com.np/" style="color: white;">Google</a></li>
                    <li><a href="https://www.youtube.com/watch?v=yJP7Jv6d4Eg" style="color: white;">YouTube</a></li>
                </ul>
            </div>
        </div>
        <p style="color: white;" class="copyright text-center">Copyright &copy; 2023 - Dish Home Store</p>
    </div>
</div>


</html>
