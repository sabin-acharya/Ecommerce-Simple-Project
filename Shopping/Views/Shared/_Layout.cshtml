<!-- Header Section -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>

    <!-- Include Bootstrap CSS from a CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Include custom CSS files -->
    <link rel="stylesheet" href="~/css/Minty.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Temp.css" asp-append-version="true" />

    <!-- Include jQuery, Popper.js, and Bootstrap JavaScript from CDNs -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<header>
    <nav style=" background-color: #FFB3B3; " class="navbar navbar-expand-lg " data-bs-theme="dark">
        <div class="container-fluid">

            <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="HomeIndex"><img height="50" width="50" src="https://dmnwebapi.dishhome.com.np/v1/file/image-16607301825045493.png" alt="RedStore" width="125px" </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeIndex">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminIndex">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="CartIndex">CartItems</a>
                    </li>
                    <li class="nav-item dropdown text-dark">
                        <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Add Products</a>
                        <div class="dropdown-menu">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="ProductIndex">Product</a>
                            
                            <div class="dropdown-divider"></div>
                            <a class="nav-link text-white" asp-area="" asp-controller="Category" asp-action="CategoryIndex">Category</a>
                        </div>
                    </li>

                </ul>
                <div>
                    <partial name="_LoginPartial" />
                </div>


            </div>

        </div>

    </nav>
</header>
<div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
@await RenderSectionAsync("Scripts", required: false)

<div class="footer" style=" background-color: #333; color: #fff;">
    <div>
        <div class="row">
            <div class="footer-col-1">
                <h3>Download Our App</h3>
                <p>Download App for Android and iso mobile phone.</p>
                <div class="app-logo">
                    <a href="https://play.google.com/store/apps/details?id=com.shirantech.dishhome&pli=1" target="_blank" rel="noopener noreferrer">
                        <img src="https://i.ibb.co/KbPTYYQ/play-store.png" alt="Link to Play Store" />
                    </a>
                    <a href="https://apps.apple.com/np/app/dish-home-nepal/id1396471022" target="_blank" rel="noopener noreferrer">
                        <img src="https://i.ibb.co/hVM4X2p/app-store.png" alt="Link to Play Store" />
                    </a>
                </div>
            </div>
            @*  <div class="footer-col-2">
            <img height="50" weidth="50" src="https://dmnwebapi.dishhome.com.np/v1/file/image-16607301825045493.png" alt="" />
            </div> *@
            <div class="footer-col-3">
                <h3 style="color: white;">Useful Links</h3>
                <ul>
                    <li>Coupons</li>
                    <li>Blog Post</li>
                    <li>Return Policy</li>

                </ul>
            </div>
            <div class="footer-col-4">
                <h3 style="color: white;">Follow us on</h3>
                <ul>
                    <li><a style="color: white" href="https://www.dishhome.com.np/">Google</a></li>
                    <li><a style="color: white" href="https://www.youtube.com/watch?v=yJP7Jv6d4Eg">YouTube</a></li> <!-- Assuming you don't want to link YouTube -->
                </ul>
            </div>
        </div>
        <p style="color: white" class="copyright">Copyright &copy; 2021 - Dish Home Store</p>
    </div>
</div>
<!-- Include jQuery and Bootstrap JavaScript from local files -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</html>

